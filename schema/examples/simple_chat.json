{
  "llms": {
    "main_llm": {
      "type": "deepseek",
      "model": "deepseek-chat",
      "api_key": "${DEEPSEEK_API_KEY}",
      "temperature": 0.7,
      "max_tokens": 2048
    }
  },
  "memories": {
    "conversation_memory": {
      "type": "conversation_buffer",
      "max_messages": 10,
      "return_messages": true
    }
  },
  "prompts": {
    "chat_prompt": {
      "type": "chat_prompt_template",
      "messages": [
        {
          "role": "system",
          "template": "你是一个有用的AI助手。请用中文回答用户的问题。"
        },
        {
          "role": "human",
          "template": "{{.input}}"
        }
      ],
      "input_variables": ["input"]
    }
  },
  "chains": {
    "chat_chain": {
      "type": "conversation",
      "llm_ref": "main_llm",
      "memory_ref": "conversation_memory"
    }
  }
}